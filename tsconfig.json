
{
  "compilerOptions": {
    "target": "ES2020",                /* Set the JavaScript language version for emitted JavaScript. */
    "module": "ES2020",               /* Specify what module code is generated (ES modules for browser). */
    "jsx": "react-jsx",               /* Specify JSX code generation (needed for .tsx files). */
    "lib": ["ES2020", "DOM", "DOM.Iterable"], /* Specify library files to be included in the compilation. */
    "esModuleInterop": true,          /* Emit additional JavaScript to ease support for CommonJS modules. */
    "forceConsistentCasingInFileNames": true, /* Ensure that casing is correct in imports. */
    "strict": true,                   /* Enable all strict type-checking options. */
    "skipLibCheck": true,             /* Skip type checking of declaration files. */
    "declaration": false,             /* Do not generate .d.ts declaration files. */
    // "noEmit": false, (This is the default, so removing "noEmit": true is sufficient)
    // If you want to explicitly output to a subfolder, you could use:
    // "outDir": "./dist",
    // But for simplicity, compiling index.tsx to index.js in the same directory is fine.

    /* Linting options from your config (these are good to keep) */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
    // "experimentalDecorators": true, // Only if you use decorators
    // "useDefineForClassFields": false, // Relevant for class field behavior, usually true for modern TS
  },
  "include": [                        /* Specifies an array of filenames or patterns to include in the program. */
    "index.tsx"
  ]
}